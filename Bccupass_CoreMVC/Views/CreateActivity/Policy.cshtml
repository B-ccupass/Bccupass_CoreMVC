@section endJS{
<script>
    let nextPaggeBtn = document.querySelector('#nextPaggeBtn')
    let checkOk = document.querySelector('#checkOk')
    let ActivityDraftId = 1
    window.onload = function(){
    isOK()
    }
    document.getElementById("checkOk").addEventListener("click", function () {
        isOK()
    })
    nextPaggeBtn.addEventListener('click', function () {
        try {
            fetch(`/CreateActivity/Category/${ActivityDraftId}`, { method: 'GET' })
                .then(res => location.assign(res.url))
        }
        catch (e) {
            console.warn(e)
        }
    })
    function isOK(){
         if (checkOk.checked) { nextPaggeBtn.disabled = false }
        else { nextPaggeBtn.disabled = true }
    }
</script>
}
