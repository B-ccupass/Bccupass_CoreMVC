@using _0323_Annie_Bccupass_ActivityDetail.Models.ViewModel.Home
@model HomeViewModel

@foreach(var item in Model.ActivityList)
{
	<div class="activity-card col-sm-12 col-md-6 col-lg-4">
    <div class="card">
        <div class="row g-0">
            <div class="col col-4 col-md-12">
                <div class="activity-img">@item.Image</div>
            </div>
            <div class="col col-8 col-md-12">
                <div class="card-body p-3">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text"><small class="text-muted">@item.StartTime ~ @item.EndTime</small></p>
                    <div class="tags">
                        <span class="card-icon icon-location">@item.City</span>
                        <span class="card-icon icon-price">免費入場嗎?</span>
                        <span class="card-icon icon-category">美食</span>
                    </div>
                    <div class="data">
                        <span class="card-icon icon-like">20</span>
                        <span class="card-icon icon-watch">20</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}