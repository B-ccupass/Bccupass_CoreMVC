@using Bccupass_CoreMVC.Models.ViewModel.ActivityCard
@using Bccupass_CoreMVC.Models.ViewModel.Organizer
@*@model OrganizerAboutViewModel.ActivityData*@
@model ActivityCardViewModel.ActivityData


<div class="activity-card col-sm-12 col-md-6 col-lg-4">
    <div class="card">
        <div class="row g-0">
            <a asp-controller="Activity" asp-action="Detail" asp-route-id="@Model.Id" class="card-title">

            <div class="col col-4 col-md-12">
                <div class="activity-img" style="background-image:url(@Model.Image);"></div>
            </div>
            </a>
            <div class="col col-8 col-md-12">
                <div class="card-body p-3">
                    <a asp-controller="Activity" asp-action="Detail" asp-route-id="@Model.Id" class="card-title">@Model.Name</a>
                    <p class="card-text"><small class="text-muted">@Model.StartTime ~ @Model.EndTime</small></p>
                    <div class="tags">
                        <span class="card-icon icon-location">@Model.City</span>
                            <span class="card-icon icon-price">@(Model.IsFree==true?"免費":"付費") </span>
                            <span class="card-icon icon-category">@Model.ActivityTheme</span>
                    </div>
                    <div class="data">
                        <span class="card-icon icon-like">@Model.Favorite</span>
                        <span class="card-icon icon-watch">20</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@*此卡的css在home.css裡*@
@section Topcss {
    <link rel="stylesheet" href="~/css/home/home.css" />
}  