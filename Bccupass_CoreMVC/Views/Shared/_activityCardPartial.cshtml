@using Bccupass_CoreMVC.Models.ViewModel.Activity
@model ActivityCardViewModel.ActivityCardData


<div class="card">
    <div class="row g-0">
        <a href="/Detail/@Model.Id" class="img-link-wrap col col-4 col-md-12">
            <div class="w-100 h-100">
                <div class="activity-img" style="background-image:url(@Model.Image);"></div>
            </div>
        </a>
        <div class="col col-8 col-md-12">
            <div class="card-body p-3 d-flex flex-column h-100">
                <a href="/Detail/@Model.Id" class="card-title text-decoration-none text-dark fs-6">@Model.Name</a>
                <p class="card-text mb-2"><small class="text-muted">@Model.StartTime ~ @Model.EndTime</small></p>
                <div class="tags mt-auto">
                    <span class="card-icon icon-location">@Model.City</span>
                        <span class="card-icon icon-price">@(Model.IsFree==true?"免費":"付費") </span>
                        <span class="card-icon icon-category">@Model.ActivityTheme</span>
                </div>
                <div class="data">
                    <span class="card-icon icon-like">@Model.Favorite</span>
                    <span class="card-icon icon-watch">20</span>
                </div>
            </div>
        </div>
    </div>
</div>

@*此卡的css在home.css裡*@
@section Topcss {
    <link rel="stylesheet" href="~/css/Activity/ActivityCard.css" />
}  