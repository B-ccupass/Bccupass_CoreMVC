    @*註冊JS*@
    <script>
        const registBtn = document.getElementById("regBtn");

        registBtn.onclick = function () {
            console.log('123');
            register();
        }

        function register() {
            const registerAccount = document.getElementById("regAccount");
            const registerName = document.getElementById("regName");
            const registerPhone = document.getElementById("regPhone");
            const registerPassword = document.getElementById("regPassword");

            const request = {
                email: registerAccount.value,
                name: registerName.value,
                phone: registerPhone.value,
                password: registerPassword.value
            };

            fetch("/Account/Signup", {
                headers: {
                    'Accept': 'application/json, text/plain',
                    'Content-Type': 'application/json;charset=UTF-8'
                },
                method: 'POST',
                body: JSON.stringify({ input: request })
            })
                .then(res => res.json())
                .then(data => {
                    console.log(data);
                    if (data.isSuccess) {
                        $('#signUpModal').modal('hide');
                    } else {
                        alert(data.message);
                    }
                })
        }
    </script>

    @*登入JS*@
    <script>
        const loginBtn = document.getElementById("loginBtn");

        loginBtn.onclick = function () {
            console.log('456');
            login();
        }

        function login() {
            const loginAccount = document.getElementById("loginAccount");
            const loginPassword = document.getElementById("loginPassword");
            const userLogin = document.getElementById("user-Login");

            const request = {
                account: loginAccount.value,
                password: loginPassword.value
            };

            fetch("/Account/Login", {
                headers: {
                    'Accept': 'application/json, text/plain',
                    'Content-Type': 'application/json;charset=UTF-8'
                },
                method: 'POST',
                body: JSON.stringify({ input: request })
            })
                .then(res => res.json())
                .then(data => {
                    console.log(data);
                    if (data.response.isSuccess) {
                        $('#loginModal').modal('hide');

                        fetch('/Account/UserLogin')
                            .then(res => res.text())
                            .then(textData => {
                                console.log(textData);
                                userLogin.innerHTML = textData
                            })
                    } else {
                        alert(data.response.message);
                    }
                })
        }
    </script>


