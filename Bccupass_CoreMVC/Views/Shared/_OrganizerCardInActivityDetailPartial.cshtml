@using Bccupass_CoreMVC.Models.ViewModel.Organizer

@model OrganizerInActivityDetailViewModel

<div class="activity-card col-sm-12 col-md-6 col-lg-6">
    <div class="card">
        <div class="row g-0">
            <div class="col col-12 col-md-12 mt-3 ml-3">
                <h4>主辦單位</h4>
            </div>
        </div>
        <div class="row g-0 mt-0">
            <div class="col col-3 col-md-3 d-flex align-items-sm-center  align-items-md-start">
                <img class="organizer-img mb-4 m-auto" src="@Model.organizer.Image" alt="主辦頭貼">
            </div>
            <div class="col col-9 col-md-12 ml-0">
                <div class="card-body">
                    <h5 class="card-title">@Model.organizer.Name</h5>
                    <button class="track-organizer-btn mb-3 py-1">關注</button>
                    <a class="contact-organizer-btn text-center py-1" href="@Model.organizer.Email">聯絡主辦</a>
                    <div class="text">
                        <p class="discription">@Model.organizer.Description</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


